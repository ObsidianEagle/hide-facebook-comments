{
    "name": "Hide Facebook Comments",
    "version": "1.0",
    "description": "To allow you to pretend Facebook comments just don't even exist",
    "manifest_version": 2,
    "permissions": ["declarativeContent", "tabs", "http://*/", "https://*/"],
    "content_scripts": [
        {
            "matches": ["http://*.facebook.com/*", "https://*.facebook.com/*"],
            "css": ["style.css"]
        }
    ]
}
